{
  "version": "0.0.1",
  "resolvers": [
    {
      "hostname": "aniwatchtv.to",
      "rules": [
        {
          "name": "anime-name",
          "selector": "h2.film-name a",
          "property": "textContent",
          "transform": "trim"
        },
        {
          "name": "episode-number",
          "selector": ".server-notice strong b",
          "property": "textContent",
          "transform": [
            {
              "type": "trim"
            },
            {
              "type": "regex",
              "pattern": "\\b\\d+\\b",
              "matchIndex": 0
            },
            {
              "type": "padStart",
              "number": 2,
              "fillString": "0"
            }
          ]
        }
      ],
      "output": {
        "format": "{animeName}.{epNum}",
        "fallback": "{animeName}"
      }
    }
  ]
}
